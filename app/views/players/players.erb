<h2>All Players for <i><%= current_user.username %></i></h2>


<table class="player_table" style="width: 100%;" >
  <tbody>
  <tr>
    <th>Player</th>
    <th>Team</th>
    <th>Cost</th>
    <th>Quantity</th>
    <th>Price</th>
    <th>Bought on</th>
  </tr>
  <% @players.each do |player| %>
  <% if player.user_id == current_user.id %>
  <tr>
    <td><a href="/players/<%= player.id %>"><%= player.name %></a></td>
    <td><%= player.team %></td>
    <td>£<%= '%.2f' % player.cost %></td>
    <td><%= player.quantity %></td>
    <td>£<%= (player.cost / player.quantity).round(2) %></td>
    <td><%= player.created_at.strftime("%d-%m-%Y") %></td>
  </tr>
  <% end %>
  <% end %>
</tbody>
</table>
<br>


</br>
<p><a href="/players/new">Click here</a> to add a player</p>
