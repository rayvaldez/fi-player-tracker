<h2>Edit <%= @player.name %></h2>

<form action="/players/<%= @player.id %>" method="POST">
  <input id="hidden" type="hidden" name="_method" value="patch">
  <label for="team">Team:</label><input type="text" name="team">
  <label for="cost">Cost:</label><input type="integer" name="cost">
  <label for="quantity">Quantity:</label><input type="number" name="quantity" min="1" max="100">
  <input type="submit" value="Update">
</form>
